<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.openclassroom.arrived.LoginActivity">
 <TextView
     android:id="@+id/textv_name_app"
     android:layout_width="300dp"
     android:layout_height="50dp"
     android:layout_marginTop="30dp"
     android:layout_centerHorizontal="true"
     android:text="@string/app_name"
     />

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textv_name_app"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_arrived" />

    <EditText
        android:id="@+id/edit_addr"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/image_view_logo"
        android:layout_centerHorizontal="true"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="298dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_addr"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Password"
        />


    <Button
        android:id="@+id/login_button"
        android:layout_width="298dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_pwd"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="20dp"
        android:text="Se connecter"/>

    <Button
        android:id="@+id/signin_button"
        android:layout_width="298dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="49dp"
        android:text="S'inscrire"
/>




</RelativeLayout>

